<?xml version="1.0" encoding="utf-8"?>
<com.alin.hourse.common.view.CommonLinearlayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cyou="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="#C0000000"
    cyou:corner_radius="6dp">

    <ImageView
        android:id="@+id/imgLoading"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:src="@drawable/loading_anim_drawable"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/txtLoadingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/white"
        android:text="我是loading...."
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/default_content_line_spacing_extra"
        android:visibility="gone"/>

</com.alin.hourse.common.view.CommonLinearlayout>